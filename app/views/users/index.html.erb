<% provide(:title, 'Users') %>
<h1>User Index</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li class="every">
      <h2><%= gravatar_for user %>
      <%= link_to user.username, user %></h2>
      <% if current_user.admin? && !current_user?(user) %>
        ||  <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
